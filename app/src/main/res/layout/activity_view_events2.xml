<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash"
    android:background="@color/blue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_2_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:fontFamily="@font/prox_nova_thin"
        android:textStyle="bold"
        android:text="Event Details"
        android:textAlignment="center"
        android:textColor="@color/lightBlue"
        android:textSize="40sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/view_2_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:fontFamily="@font/prox_nova_thin"
        android:textStyle="bold"
        android:text=" Name: "
        android:textColor="@color/gold"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/view_2_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:fontFamily="@font/prox_nova_thin"
        android:textStyle="bold"
        android:text=" Date: "
        android:textColor="@color/gold"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/view_2_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:fontFamily="@font/prox_nova_thin"
        android:textStyle="bold"
        android:text=" Time: "
        android:textColor="@color/gold"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/view_2_5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:fontFamily="@font/prox_nova_thin"
        android:textStyle="bold"
        android:text=" Punctual Guests: "
        android:textColor="@color/gold"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/view_2_6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:fontFamily="@font/prox_nova_thin"
        android:textStyle="bold"
        android:text=" Late Guests: "
        android:textColor="@color/gold"
        android:textSize="25sp" />


    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:fontFamily="@font/prox_nova_thin"
        android:textStyle="bold"
        android:text="Back"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:background="@drawable/button_menu"
        android:layout_marginTop="0.5dp"
        android:layout_marginBottom="0.5dp"
        android:onClick="back"/>

</LinearLayout>
