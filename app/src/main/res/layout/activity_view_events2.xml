<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash"
    android:background="@color/blue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_2_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:fontFamily="@font/prox_nova_thin"
        android:textStyle="bold"
        android:text="Event Details"
        android:textAlignment="center"
        android:textColor="@color/lightBlue"
        android:textSize="40sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_2_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:fontFamily="@font/prox_nova_thin"
            android:textStyle="bold"
            android:text=" Name:"
            android:textColor="@color/lightGold"
            android:textSize="30sp"
            android:gravity="left|top"/>
        <TextView
            android:id="@+id/view_2_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:fontFamily="@font/prox_nova_thin"
            android:textStyle="bold"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/lightBlue"
            android:textSize="30sp"
            android:gravity="left|top"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_2_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:fontFamily="@font/prox_nova_thin"
            android:textStyle="bold"
            android:text=" Date:"
            android:textColor="@color/lightGold"
            android:textSize="30sp"
            android:gravity="left|top"/>
        <TextView
            android:id="@+id/view_2_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:fontFamily="@font/prox_nova_thin"
            android:textStyle="bold"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/lightBlue"
            android:textSize="30sp"
            android:gravity="left|top"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_2_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:fontFamily="@font/prox_nova_thin"
            android:textStyle="bold"
            android:text="Guests:"
            android:textColor="@color/lightGold"
            android:textSize="30sp"
            android:gravity="left|top"/>
        <TextView
            android:id="@+id/view_2_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:fontFamily="@font/prox_nova_thin"
            android:textStyle="bold"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/lightBlue"
            android:textSize="30sp"
            android:gravity="left|top"/>

    </LinearLayout>


    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:fontFamily="@font/prox_nova_thin"
        android:textStyle="bold"
        android:text="Back"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:background="@drawable/button_menu"
        android:layout_marginTop="0.5dp"
        android:layout_marginBottom="0.5dp"
        android:onClick="back"/>

</LinearLayout>
