<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash"
    android:background="@color/blue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/home_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:fontFamily="@font/prox_nova_thin"
        android:textStyle="bold"
        android:text="Friend Sked"
        android:textAlignment="center"
        android:textColor="@color/gold"
        android:textSize="60sp"
        android:gravity="center"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/splash" />

    <TextView
        android:id="@+id/home_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:fontFamily="@font/prox_nova_thin"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="mm-dd-yyy"
        android:textColor="@color/lightBlue"
        android:textSize="30sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/button_create"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.04"
        android:fontFamily="@font/prox_nova_thin"
        android:textStyle="bold"
        android:text="Create an Event"
        android:textSize="30sp"
        android:textColor="@color/blue"
        android:background="@drawable/button_menu"
        android:layout_marginTop="0.5dp"
        android:layout_marginBottom="0.5dp"
        android:onClick="createEvent"/>

    <Button
        android:id="@+id/button_events"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.04"
        android:fontFamily="@font/prox_nova_thin"
        android:textStyle="bold"
        android:text="View Events"
        android:textSize="30sp"
        android:textColor="@color/blue"
        android:background="@drawable/button_menu"
        android:layout_marginTop="0.5dp"
        android:layout_marginBottom="0.5dp"
        android:onClick="viewEvents"/>

    <Button
        android:id="@+id/button_contacts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.04"
        android:fontFamily="@font/prox_nova_thin"
        android:textStyle="bold"
        android:text="Contacts"
        android:textSize="30sp"
        android:textColor="@color/blue"
        android:background="@drawable/button_menu"
        android:layout_marginTop="0.5dp"
        android:layout_marginBottom="0.5dp"
        android:onClick="contacts"/>



</LinearLayout>